    <form action="/healthcreate" method="post">
      <div class="row">
        <div class="medium-3 columns medium-offset-1">
          <label><h5>Tag Number</strong></h5>
        </div>
        <div class="medium-6 columns end">
          <input type="text" name="tagnum" placeholder="Animal tag number">
        </div>
      </div>
      <div class="row">
        <div class="medium-3 columns medium-offset-1">
          <label><h5>Disease Name </h5></label>
        </div>
        <div class="medium-6 columns end">
          <input type="text" name='disease' placeholder="Disease diagnosed/vaccinated">
        </div>
      </div>
      <div class="row">
        <div class="medium-3 columns medium-offset-1">
          <label><h5>Date Diagnosed</h5></label>
        </div>
        <div class="medium-6 columns end">
          <input type="date" name="diagnosedate" >
        </div>
      </div>
      <div class="row">
        <div class="medium-3 columns medium-offset-1">
          <label><h5>Total cost</h5></label>
        </div>
        <div class="medium-6 columns end">
          <input type="number" name="cost" placeholder="The cost charged for vet services and drugs">
        </div>
      </div>
      <div class="row">
        <div class="medium-3 columns medium-offset-1">
          <label><h5>Next Dose </h5></label>
        </div>
        <div class="medium-6 columns end">
          <input type="date" name="nextdose" placeholder="Next treatment/vaccination">
        </div>
      </div>
      <div class="row">
        <div class="medium-3 medium-offset-6">
          <button class="button large"type="submit">Save Records</button>
        </div>
      </div>
    </form>
  </div>
